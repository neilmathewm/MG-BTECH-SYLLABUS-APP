<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neil.user.mg_syllabus.Semester_Main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:id="@+id/button"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="CeSemester"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT"
        android:ems="10"
        android:id="@+id/button2"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:onClick="ItSemester"
        android:layout_above="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AEI"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/button3"
        android:onClick="AeiSemester"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EEE"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/button4"
        android:onClick="EeeSemester"
        android:layout_above="@+id/button3"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECE"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/button5"
        android:ellipsize="none"
        android:elegantTextHeight="false"
        android:onClick="EceSemester"
        android:layout_above="@+id/button4"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/button6"
        android:onClick="CseSemester"
        android:layout_above="@+id/button5"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ME"
        android:id="@+id/button7"
        android:ems="10"
        android:background="#113ec3"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:onClick="MeSemester"/>
</RelativeLayout>
